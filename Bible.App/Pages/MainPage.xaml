<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
    x:Class="BibleApp.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:BibleApp.Models"
    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:pages="clr-namespace:BibleApp.Pages"
    xmlns:vm="clr-namespace:BibleApp.ViewModels"
    x:DataType="vm:MainPageViewModel"
    x:TypeArguments="vm:MainPageViewModel">

    <pages:BasePage.Resources>
        <ResourceDictionary>
            <mct:SelectedItemEventArgsConverter x:Key="SelectedItemEventArgsConverter" />
        </ResourceDictionary>
    </pages:BasePage.Resources>

    <Shell.TitleView>
        <StackLayout>
            <HorizontalStackLayout Spacing="25">
                <Label Text="Chapter" VerticalOptions="Center" />
                <Picker ItemsSource="{Binding ChapterNumbers, Mode=OneTime}" SelectedIndex="{Binding ChapterIndex, Mode=TwoWay}">
                    <Picker.Behaviors>
                        <mct:EventToCommandBehavior Command="{Binding ChapterSelectedCommand}" EventName="SelectedIndexChanged" />
                    </Picker.Behaviors>
                </Picker>
            </HorizontalStackLayout>
        </StackLayout>
    </Shell.TitleView>

    <ListView ItemsSource="{Binding Verses, Mode=OneTime}" SelectedItem="{Binding SelectedVerse, Mode=OneWayToSource}">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="m:VerseUiModel">
                <ViewCell>
                    <Grid Margin="5" ColumnDefinitions="15,*">
                        <Label
                            FontSize="8"
                            HorizontalTextAlignment="End"
                            Text="{Binding Id, Mode=OneTime, Source={RelativeSource AncestorType={x:Type m:VerseUiModel}}}" />
                        <Label
                            x:Name="VerseTextLabel"
                            Grid.Column="1"
                            Padding="5,0"
                            FontSize="16"
                            Text="{Binding Text, Mode=OneTime, Source={RelativeSource AncestorType={x:Type m:VerseUiModel}}}" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</pages:BasePage>
