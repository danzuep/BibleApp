<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BibleApp.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Shell.TitleView>
        <StackLayout>
            <HorizontalStackLayout Spacing="25">
                <Label Text="Chapter" VerticalOptions="Center" />
                <Picker x:Name="chapterPicker" SelectedIndexChanged="OnSelectedIndexChanged" />
            </HorizontalStackLayout>
        </StackLayout>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout
            Padding="10,10,10,10"
            BindableLayout.ItemsSource="{Binding Verses, Mode=OneWay}"
            Spacing="5">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Label
                        Padding="5,0"
                        FontSize="16"
                        Text="{Binding Path=., Mode=OneTime}" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
