<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BibleApp.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:page="clr-namespace:BibleApp.Pages">

    <Shell.TitleView>
        <StackLayout>
            <HorizontalStackLayout Spacing="25">
                <Label Text="Chapter" VerticalOptions="Center" />
                <Picker x:Name="chapterPicker" SelectedIndexChanged="OnSelectedIndexChanged" />
                <Button Clicked="OnClickedEvent" Text="View" />
                <Button Clicked="OnClickedEventScroll" Text="Scroll" />
            </HorizontalStackLayout>
        </StackLayout>
    </Shell.TitleView>

    <CollectionView x:Name="collectionView" ItemsSource="{Binding Chapter.Verses, Mode=OneWay}">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout
                ItemSpacing="5"
                Orientation="Vertical"
                SnapPointsAlignment="Start"
                SnapPointsType="MandatorySingle" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="x:String">
                <Label
                    Padding="5,0"
                    FontSize="16"
                    Text="{Binding Path=., Mode=OneTime}" />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
