<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="BibleApp.Pages.ChapterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="10,10,10,10"
            BindableLayout.ItemsSource="{Binding Chapter.Verses, Mode=OneWay}"
            SemanticProperties.Description="Chapter"
            SemanticProperties.Hint="Chapter"
            Spacing="5">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Label
                        Padding="5,0"
                        FontSize="16"
                        Text="{Binding Path=., Mode=OneTime}" />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
